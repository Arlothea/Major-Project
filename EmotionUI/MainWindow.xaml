<Window x:Class="EmotionUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Emotion Facial Recognition Tool" Height="550" Width="850" Background="#1e1e1e">
    
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock 
            Text="Emotion Facial Recognition Tool" 
            FontSize="24"
            HorizontalAlignment="Center"
            Foreground="White" 
            Margin="0,0,0,10"/>
        
        <Grid Grid.Row="1">
            <Border x:Name="CameraHost"
                    Background="#2b2b2b"
                    CornerRadius="12">

                <Image x:Name="CameraFeed"
                   Stretch="UniformToFill"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch"/>
            </Border>
            
            <Border Background="Transparent"
                    BorderBrush="#444"
                    BorderThickness="2"
                    CornerRadius="12"/>
        </Grid>
        
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock 
                x:Name="StatusText"
                Text="Status: Stopped"
                Foreground="Orange"
                VerticalAlignment="Center"/>

            <TextBlock x:Name="EmotionText"
                Grid.Column="1"
                Text="Detected Emotion: None"
                Foreground="White"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>

            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button 
                    Content="Start"
                    Margin="5"
                    Click="Start_Click"/>
                <Button 
                    Content="Stop"
                    Margin="5"
                    Click="Stop_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
