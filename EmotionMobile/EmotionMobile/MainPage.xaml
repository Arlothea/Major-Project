<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmotionMobile.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="40" Spacing="20">
            <Label
                Text="Emotion Alert System"
                FontSize="28"
                HorizontalOptions="Center" />

            <Label x:Name="NameLabel"
               Text="No active escalation"
               FontSize="30"
               TextColor="Red"
               HorizontalOptions="Center" />

            <Label x:Name="CameraLabel"
               Text=""
               FontSize="20"
               HorizontalOptions="Center" />

            <Label x:Name="LevelLabel"
               Text=""
               FontSize="18"
               HorizontalOptions="Center" />
        </VerticalStackLayout>

    </ScrollView>

</ContentPage>
